
@{
    ViewData["Title"] = "Update";
}
@model CustomerDto
<h1>Customer Update</h1>

<div class="row">
    <div class="coll-md-6">
        <form asp-action="Update" method="post" asp-controller="Customer">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mail"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberPhone"></label>
                <input asp-for="NumberPhone" class="form-control" />
                <span asp-validation-for="NumberPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BirtDate"></label>
                <input asp-for="BirtDate" class="form-control" /> 
            </div>
            <div class="form-group">
                <label asp-for="CreateDate"></label>
                <input asp-for="CreateDate" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn-primary" />
            </div>
        </form>
    </div>

</div>

