
@{
    ViewData["Title"] = "Update";
}
@model AdressDto
<h1>Adress Update</h1>

<div class="row">
    <div class="coll-md-6">
        <form asp-action="Update" method="post" asp-controller="Adress">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Province"></label>
                <input asp-for="Province" class="form-control" />
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Districte"></label>
                <input asp-for="Districte" class="form-control" />
                <span asp-validation-for="Districte" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Neighbourhood"></label>
                <input asp-for="Neighbourhood" class="form-control" />
                <span asp-validation-for="Neighbourhood" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Street"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BuildingNo"></label>
                <input asp-for="BuildingNo" class="form-control" />
                <span asp-validation-for="BuildingNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PostCode"></label>
                <input asp-for="PostCode" class="form-control" />
                <span asp-validation-for="PostCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApartmentNumber"></label>
                <input asp-for="ApartmentNumber" class="form-control" />
                <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="adressDetails"></label>
                <input asp-for="adressDetails" class="form-control" />
                <span asp-validation-for="adressDetails" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="numberPhone"></label>
                <input asp-for="numberPhone" class="form-control" />
                <span asp-validation-for="numberPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CustomerId"></label>
                <input asp-for="CustomerId" class="form-control" />
                <span asp-validation-for="numberPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateDate"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Update" class="btn-primary" />
            </div>
        </form>
    </div>

</div>

