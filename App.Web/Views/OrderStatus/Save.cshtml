
@{
    ViewData["Title"] = "Save";
}
@model OrderStatusDto
<h1>Sipariş Durumu Oluşturma</h1>

<div class="row">
    <div class="coll-md-6">
        <form asp-action="Save" method="post" asp-controller="OrderStatus">
            <div class="form-group">
                <label asp-for="StatusType"></label>
                <input asp-for="StatusType" class="form-control" />
                <span asp-validation-for="StatusType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateDate"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn-primary" />
            </div>
        </form>
    </div>

</div>

